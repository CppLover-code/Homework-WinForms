                    </StackPanel>

                    <Slider Grid.Column="3" Maximum="100"/>

                    <StackPanel Grid.Column="4">
                        <CheckBox>Case Sensetive</CheckBox>
                    </StackPanel>

                </Grid>
            </StackPanel>

            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
