                    <Button Grid.Column="1" Style="{StaticResource RedBtnStyle}">1</Button>
                    <Button Grid.Column="2" Style="{StaticResource RedBtnStyle}">2</Button>
                    <Button Grid.Column="3" Style="{StaticResource YellowBtnStyle}">3</Button>
                    <Button Grid.Column="4" Style="{StaticResource GreenBtnStyle}">4</Button>
                    <Button Grid.Column="5" Margin="5,5,5,5" Padding="10">5</Button>
                    <Button Grid.Column="6" Margin="5,5,5,5" Padding="10">6</Button>
                    <Button Grid.Column="7" Margin="5,5,5,5" Padding="10">7</Button>
                    <Button Grid.Column="8" Margin="5,5,5,5" Padding="10">8</Button>
